# Switch to "performance" when plugged in (or detected at boot)
SUBSYSTEM=="power_supply", ACTION=="add|change", ENV{POWER_SUPPLY_ONLINE}=="1", RUN+="/usr/bin/powerprofilesctl set performance"

# Switch to "power-saver" when unplugged (or detected at boot)
SUBSYSTEM=="power_supply", ACTION=="add|change", ENV{POWER_SUPPLY_ONLINE}=="0", RUN+="/usr/bin/powerprofilesctl set power-saver"